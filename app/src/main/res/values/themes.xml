<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.GithubSearch" parent="Theme.Material3.Dark">

        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="android:colorBackground">@color/white</item>

        <item name="android:textColor">@color/primary</item>
        <item name="android:textColorPrimary">@color/primary</item>
        <item name="android:textColorSecondary">@color/secondary</item>

        <item name="actionBarStyle">@style/AppActionBarStyle</item>
        <item name="materialSearchBarStyle">@style/MaterialSearchBar</item>
    </style>

    <!--  appbar  -->
    <style name="AppActionBarStyle" parent="Widget.Material3.ActionBar.Solid">
        <item name="titleTextStyle">@style/AppTitleTextStyle</item>
        <item name="subtitleTextStyle">@style/AppSubtitleTextStyle</item>
    </style>
    <style name="AppTitleTextStyle" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppSubtitleTextStyle" parent="TextAppearance.Material3.ActionBar.Subtitle">
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <!--  material search bar  -->
    <style name="MaterialSearchBar" parent="Widget.Material3.SearchBar">
        <item name="queryBackground">@color/white</item>
    </style>

    <!--  text appearance  -->
    <style name="text_label" parent="TextAppearance.Material3.LabelLarge">
    </style>
    <style name="text_desc" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textColor">@color/subtitle</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="title1" parent="TextAppearance.Material3.TitleLarge">
    </style>
    <style name="subtitle1" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/subtitle</item>
    </style>
    <style name="anchor1" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textColor">@color/link</item>
    </style>

</resources>